<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inkey.bi.dao.report.ReportDao">

    <!--查询实体-->
    <select id="get" resultType="Report">
		SELECT 
            report_id
           ,a.cate_id
           ,a.name
           ,a.status
           ,a.create_time
           ,a.update_time
           ,a.remark
           ,b.name cate_name
        FROM bi_report a
          LEFT JOIN bi_report_cate b on a.cate_id=b.cate_id
        WHERE report_id = #{reportId}
	</select>

    <!--添加-->
    <insert id="add" parameterType="Report" useGeneratedKeys="true" keyProperty="reportId">
		INSERT INTO bi_report (
            cate_id
           ,name
           ,status
           ,create_time
           ,update_time
           ,remark 
		) VALUES (
            #{cateId}
           ,#{name}
           ,#{status}
           ,#{createTime}
           ,#{updateTime}
           ,#{remark}
		);
	</insert>

    <!--更新-->
    <update id="update" parameterType="Report">
		UPDATE  bi_report SET 
            cate_id = #{cateId}
           ,name = #{name}
           ,status = #{status}
           ,update_time = #{updateTime}
           ,remark = #{remark}
        WHERE report_id = #{reportId}
	</update>
    
    <!--删除-->
    <delete id="delete">
        DELETE FROM bi_report WHERE report_id=#{reportId}
    </delete>
    
    <!--分页-->
    <select id="getPage" resultType="Report" >
        SELECT 
            report_id
           ,a.cate_id
           ,a.name
           ,a.status
           ,a.create_time
           ,a.update_time
           ,a.remark
           ,b.name cate_name
        FROM bi_report a
          LEFT JOIN bi_report_cate b on a.cate_id=b.cate_id
          <if test="cateId > 0">
              WHERE a.cate_id = #{cateId}
          </if>
        LIMIT #{pageIndex},#{pageSize}
    </select>    
    
    <!--列表-->
    <select id="getList" resultType="Report" >
        SELECT 
            report_id
           ,a.cate_id
           ,a.name
           ,a.status
           ,a.create_time
           ,a.update_time
           ,a.remark
           ,b.name cate_name
        FROM bi_report a
          LEFT JOIN bi_report_cate b on a.cate_id=b.cate_id
    </select> 
    
    <!--批量更新-->
    <update id="batchUpdate" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" open="" close="" separator=";">
          update bi_report
            <set>
            cate_id = #{item.cateId}
           ,name = #{item.name}
           ,status = #{item.status}
           ,update_time = #{item.updateTime}
           ,remark = #{item.remark}
            </set>
          where report_id = #{reportId}
        </foreach>
    </update>
    
    <!--列表-->
    <select id="count" resultType="Integer" >
        SELECT 
            count(*) 
        FROM bi_report 
    </select> 
</mapper>



