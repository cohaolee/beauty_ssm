<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yingjun.ssm.dao.bi.report.ReportCateDao">

    <!--查询子分类-->
    <select id="getSubCates" resultType="ReportCate">
		SELECT *
		FROM bi_report_cate
		WHERE parent_id = #{id}
		ORDER BY sort;

	</select>


	<!--查询子分类-->
	<select id="addCate"  parameterType="com.yingjun.ssm.entity.bi.report.ReportCate">
		INSERT INTO bi_report_cate (
			parent_id
			,name
			,status
			,sort
			,create_time
			,update_time
		) VALUES (
			#{parentId}
			,#{name}
			,#{status}
			,#{sort}
			,#{createTime}
			,#{updateTime}
		)

	</select>

</mapper>